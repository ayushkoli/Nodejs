<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Post</title>
    <link rel="stylesheet" href="/style.css">
</head>
<style>
    /* Center alignment for posts section */
.posts-section {
    max-width: 900px;
    margin: 0 auto;
    padding: 40px 20px;
}

.posts-section h2 {
    text-align: center;
    margin-bottom: 40px;
}

.empty-state {
    text-align: center;
    padding: 60px 20px;
}

.posts-grid {
    display: flex;
    flex-direction: column;
    gap: 24px;
    width: 100%;
}

.post {
    width: 100%;
    padding: 24px;
}

.post h3 {
    font-size: 1.75rem;
    margin-bottom: 16px;
}

.post p {
    font-size: 1.1rem;
    line-height: 1.6;
}

/* Responsive adjustments */
@media (max-width: 768px) {
    .posts-section {
        max-width: 100%;
        padding: 30px 16px;
    }
    
    .post h3 {
        font-size: 1.5rem;
    }
    
    .post p {
        font-size: 1rem;
    }
}
</style>

<body>
    <!-- Posts Section -->
    <section class="posts-section">
        <h2>Your Posts</h2>
    
        <% if (posts.length===0) { %>
            <div class="empty-state">
                <p>No posts yet. Create your first post above!</p>
            </div>
            <% } else { %>
                <div class="posts-grid">
                    <% posts.forEach(post=> { %>
                        <article class="post">
                            <h3>
                                <%= post.title %>
                            </h3>
                            <p>
                                <%= post.content %>
                            </p>
                        </article>
                        <% }) %>
                </div>
                <% } %>
    </section>
    
</body>
</html>