<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8"> <!-- Character encoding -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0"> <!-- Responsive layout -->
    <title>Home</title>
    <link rel="stylesheet" href="/style.css"> <!-- Main CSS -->
</head>

<body>

    <div class="container"> <!-- Main wrapper -->

        <!-- User Header -->
        <div class="user-header">
            <h1>Welcome, <%= user.name %>
            </h1> <!-- User name -->
            <p class="user-email">
                <%= user.email %>
            </p> <!-- User email -->

            <div class="divider"></div>

            <div style="font-size: 25px;font-weight: 600;">
                <a href="/mypost">My Posts</a> <!-- User posts link -->
            </div>
        </div>

        <div class="divider"></div>

        <!-- Create Post Section -->
        <section class="create-section">
            <h2>Create Post</h2>

            <form action="/posts" method="POST"> <!-- Create post form -->
                <input type="text" name="title" placeholder="Post title" required />
                <textarea name="content" placeholder="What's on your mind?" required></textarea>
                <button type="submit">Publish Post</button>
            </form>
        </section>

        <div class="divider"></div>

        <section class="posts-section">
            <h2>All Posts</h2>

            <% if (allpost.length===0) { %> <!-- No posts -->
                <div class="empty-state">
                    <p>No posts yet</p>
                </div>
                <% } else { %>

                    <div class="posts-grid"> <!-- Posts list -->
                        <% allpost.forEach(post=> { %>

                            <article class="post"> <!-- Single post -->

                                <h3>
                                    <%= post.title %>
                                </h3> <!-- Post title -->
                                <p>
                                    <%= post.content %>
                                </p> <!-- Post content -->

                                <!-- Author Info -->
                                <div class="post-author">
                                    <small>
                                        Posted by
                                        <strong>
                                            <%= post.userId.name %>
                                        </strong>
                                        (<%= post.userId.email %>)
                                    </small>
                                </div>

                            </article>

                            <% }) %>
                    </div>

                    <% } %>
        </section>

        <!-- Logout -->
        <div class="logout">
            <a href="/logout">Logout</a> <!-- Logout link -->
        </div>

    </div>

</body>

</html>